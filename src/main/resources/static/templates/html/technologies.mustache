        <li class="nav-item text-nowrap">
            <a class="nav-link" href="#">Sign out</a>
        </li>
    </ul>
</nav>

<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="sidebar-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/app/">
                            <span data-feather="home"></span>
                            Summaries
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/app/vacancies">
                            <span data-feather="file"></span>
                            Vacancies <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/app/technologies">
                            <span data-feather="layers"></span>
                            Technologies
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/app/users">
                            <span data-feather="users"></span>
                            Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/app/statistic">
                            <span data-feather="bar-chart-2"></span>
                            Statistic
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h2 class="h2">Top 3 popular technologies</h2>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Technology title</th>
                        <th>Rating of popularity</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#statistic}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{count}}</td>
                        </tr>
                    {{/statistic}}
                    <tr>
                        <td></td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h2 class="h2">All popular technologies</h2>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Technology title</th>
                        <th>Rating of popularity</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#allStatistic}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{count}}</td>
                        </tr>
                    {{/allStatistic}}
                    <tr>
                        <td></td>
                    </tr>
                    </tbody>
                </table>
            </div>



            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h2 class="h2">All technologies</h2>
                <div class="btn-toolbar mb-3 mb-md-0">
                    <form method="post">
                        <input type="text" name="target" placeholder="Find by">
                        <div class="btn-group mr-2">
                            <button type="submit" formaction="/app/technologies/findBy/employee" class="btn btn-sm btn-outline-secondary">Employee</button>
                            <button type="submit" formaction="/app/technologies/findBy/title" class="btn btn-sm btn-outline-secondary">Title</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Technology name</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#technologies}}
                        <tr>
                            <td>{{person.login}}</td>
                            <td>{{title}}</td>
                            <td>{{dateOfUpdates}}</td>
                            <td>
                                <form action="/app/technologies/delete" method="post">
                                    <input type="number" hidden="true" name="id" value="{{id}}">
                                    <button class="btn btn-link" id="button" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <tr>
                            <form action="/app/technologies/update" method="post">
                                <td><input type="text" required="true"  name="login" placeholder="new login"></td>
                                <td><input type="text" required="true"  name="title" placeholder="new title"></td>
                                <td><input type="datetime-local" required="true"   name="date" placeholder="new date"></td>
                                <input type="number" hidden="true" name="id" value="{{id}}">
                                <td>
                                    <button class="btn btn-link" type="submit">Update</button>
                                </td>
                            </form>
                        </tr>
                    {{/technologies}}
                    {{#exeption}}
                        <tr class="table-danger">
                            <td></td>
                            <td></td>
                            <td>{{massage.text}} </td>
                            <td></td>
                        </tr>
                    {{/exeption}}
                    {{^exeption}}
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    {{/exeption}}
                    <tr>
                        <form action="/app/technologies/add" method="post">
                            <td><input type="text" required="true"  name="login" placeholder="login"></td>
                            <td><input type="text" required="true"  name="title" placeholder="title"></td>
                            <td><input type="datetime-local" required="true"  name="date" placeholder="date"></td>
                            <td>
                                <button class="btn btn-link" type="submit">Add</button>
                            </td>
                        </form>
                    </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
